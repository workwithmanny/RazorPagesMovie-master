@page
@model RazorPagesMovie.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Create Movie";
}

<h1>Create New Movie</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.Director" class="control-label"></label>
                <input asp-for="Movie.Director" class="form-control" />
                <span asp-validation-for="Movie.Director" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.Genre" class="control-label"></label>
                <input asp-for="Movie.Genre" class="form-control" />
                <span asp-validation-for="Movie.Genre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.IMDbRating" class="control-label"></label>
                <input asp-for="Movie.IMDbRating" class="form-control" />
                <span asp-validation-for="Movie.IMDbRating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.BoxOfficeRevenue" class="control-label"></label>
                <input asp-for="Movie.BoxOfficeRevenue" class="form-control" />
                <span asp-validation-for="Movie.BoxOfficeRevenue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.ReleaseCountry" class="control-label"></label>
                <input asp-for="Movie.ReleaseCountry" class="form-control" />
                <span asp-validation-for="Movie.ReleaseCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.Price" class="control-label"></label>
                <input asp-for="Movie.Price" class="form-control" />
                <span asp-validation-for="Movie.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Actors</label>
                <select asp-for="SelectedActors" asp-items="Model.ActorOptions" class="form-control" multiple></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}